:javascript
    $('li').removeClass('active');
    $('#tab-env').addClass('active');
%div{class: 'page-header'}
    %h2 Mock Server - Set Test environment
    %blockquote
        %p{class: "lead text-info"} Mock server can respond to mock request for a specific test environment

%form{action: '/environment', method: 'post'}

    %div{class: 'row'}
        %div{class: 'form-group col-md-3'}
            %h5{class: "alert alert-info"} Current test environment is #{ENV['TEST_ENV']}
            %label{class: 'control-label',for: 'mock_environment'} Set test Environment
            %select{class: 'form-control', name: 'mock_environment'}
                %option integration
                %option production
                %option quality
    %div{class: 'row col-md-3'}
    %button(type="submit" class="btn btn-primary btn-lg btn-block")Set Environment